
<div class="modal fade" id="newModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Workout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/workouts" method="POST">
            <div class="modal-body">
            <!-- modal body -->
                <div class="mb-3 row">
                    <div class="col-12 col-lg-2">
                        <label for="title" class="form-label">Title</label>
                    </div>
                    <div class="col-12 col-lg-10">
                        <input type="text" class="form-control" name="title" id="title">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12 col-lg-2">
                        <label for="date" class="form-label">Date</label>
                    </div>
                    <div class="col-12 col-lg-10">
                        <input type="datetime-local" class="form-control" name="date" id="date" value="<%= defaultDate %>">
                    </div>
                    
                </div>
                <!-- <div class="col-12 d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div> -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-workout" data-bs-dismiss="modal">Save changes</button>
            </div>
        </form>
      </div>
    </div>
</div>