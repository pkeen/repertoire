<%- include('../partials/header') %>

<section id="workouts">
    <div class="row f-flex align-items-center mb-2">
        <div class="col-12 d-flex justify-content-center">
            <h1 class="text-workout-dark">Workouts</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <button 
                class="btn btn-sm btn-workout"
                type="button"
                data-bs-toggle="modal"
                data-bs-target="#newModal"
            >
                New
            </button>
        </div>
    </div>

    <%- include('./new') %>

    <div>
        <% workouts.forEach((workout, i) => { %>
            <a href="/workouts/<%= workout.id %>">
                <div class="row workout-box mb-2">
                    <div class="exercise-inner-white-border">
                        <div class="container workout">
                            <div class="row">
                                <div class="col d-flex justify-content-center">
                                    <a class="text-workout-dark" href="/workouts/<%= workout.id %>"> <%= workout.formatWorkoutName() %></a>
                                </div>
                                <div class="cold d-flex justify-content-center m-1">
                                    <a
                                        class="btn btn-sm btn-workout me-1"
                                        role="button"
                                        href="/workouts/<%= workout.id %>"
                                    >
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                        </svg>
                                    </a>
                                    <button 
                                        class="btn btn-sm btn-workout"
                                        type="button"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal<%= i %>"
                                        >
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                          </svg>
                                    </button>
                                </div>
                                <!-- delete modal -->
                                <%- include('./partials/deleteInList', {workout, i}) %>
                            </div>
                            <div class="row">
                                <% workout.exercises.forEach(e => { %>
                                    <div class="row">
                                        <div class="col ms-5">
                                            <div class="row">
                                                <p class="text-primary-dark"> <%= e.exerciseData.formatName() %></p>
                                            </div>
                                            <div class="row">
                                                <div class="col ms-5">
                                                    <% e.sets.forEach(s => { %>
                                                        <div class="row">
                                                            <p class="text-set-dark"> Weight: <%= s.weight %> | Reps: <%= s.reps %></p>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        <% }) %>
    </div>

</section>

<%- include('../partials/footer') %>